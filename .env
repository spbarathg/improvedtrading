# API Keys and Tokens
PUMP_FUN_API_KEY=your_pump_fun_api_key
DEXSCREENER_API_KEY=your_dexscreener_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# API URLs
PUMP_FUN_API_URL=https://api.pump.fun
DEXSCREENER_API_URL=https://api.dexscreener.com
SOLANA_RPC_URL=wss://api.mainnet-beta.solana.com

# Rate Limits
PUMP_FUN_RATE_LIMIT=10
DEXSCREENER_RATE_LIMIT=5
TWITTER_RATE_LIMIT=180

# Data Storage
DATA_STORAGE_PATH=data/trading_bot.db

# Fetching Settings
FETCH_INTERVAL=60
BATCH_SIZE=100
CACHE_SIZE=1000
CACHE_TTL=3600

# Twitter Settings
TWITTER_QUERY=(crypto OR cryptocurrency OR bitcoin OR ethereum) -is:retweet lang:en
MIN_TWEET_ENGAGEMENT_RETWEETS=10
MIN_TWEET_ENGAGEMENT_LIKES=50

# Model Settings
FEATURE_VECTOR_SIZE=100
SENTIMENT_THRESHOLD=0.2

# Trading Settings
TRADING_ENABLED=false
MAX_POSITION_SIZE=1000.0
STOP_LOSS_PERCENT=5.0
TAKE_PROFIT_PERCENT=10.0
MAX_DAILY_LOSS_PERCENT=2.0
MAX_OPEN_TRADES=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/trading_bot.log

# Model Hyperparameters
ONLINE_MODEL_LEARNING_RATE=0.01
PERIODIC_MODEL_RETRAIN_INTERVAL=3600
MODEL_SELECTION_STRATEGY=weighted_average

# Update Intervals
DATA_FETCH_INTERVAL=60
FEATURE_EXTRACTION_INTERVAL=60
MODEL_TRAINING_INTERVAL=3600
TRADING_LOOP_INTERVAL=10

# File Paths
LOG_FILE_PATH=trading_bot/logs/trading_bot.log
MODEL_SAVE_PATH=ai_model/saved_models/

# Debug Mode
DEBUG_MODE=True